{
  "name": "nabais.me",
  "version": "2022.8.2",
  "private": true,
  "description": "nabais.me website",
  "author": "Luis Nabais <luis@nabais.me>",
  "license": "MIT",
  "main": "src/pages/index.jsx",
  "engines": {
    "node": ">= 12.22.0"
  },
  "scripts": {
    "build": "npm run build:web",
    "build:web": "NODE_ENV=production astro build",
    "clean": "rimraf dist node_modules/.vite",
    "debug": "npm run debug:serve",
    "debug:serve": "NODE_ENV=development astro dev",
    "debug:test": "BABEL_ENV=test jest --watch --maxWorkers=2",
    "serve": "astro preview",
    "fix": "npm run fix:js && npm run fix:styles",
    "fix:js": "eslint --fix --ext .js --ext .jsx src tests",
    "fix:styles": "stylelint src/**/*.sass src/**/*.scss src/**/*.css --fix",
    "lint": "npm run lint:js && npm run lint:styles",
    "lint:js": "eslint ${ESLINT_OPTS} --ext .js --ext .jsx src tests",
    "lint:styles": "stylelint src/**/*.sass src/**/*.scss src/**/*.css",
    "start": "npm run debug",
    "test": "npm run test:js",
    "test:js": "NODE_ENV=test jest --passWithNoTests ${JEST_OPTS}",
    "test:js:update": "NODE_ENV=test jest -u"
  },
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "jest": {
    "setupFiles": [
      "dotenv-flow/config",
      "<rootDir>/tests/setupTests.js"
    ],
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat",
      "\\.(css|scss|sass)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!lodash-es)"
    ]
  },
  "dependencies": {
    "@astrojs/preact": "^1.0.2",
    "@fontsource/play": "^4.5.11",
    "@fontsource/roboto-condensed": "^4.5.9",
    "@rooks/use-key": "^4.11.2",
    "@sentry/browser": "^7.11.1",
    "astro": "^1.1.0",
    "clsx": "^1.2.1",
    "feather-icons": "^4.29.0",
    "iso-url": "^1.2.1",
    "keen-slider": "^6.7.0",
    "lodash-es": "^4.17.21",
    "normalize.css": "^8.0.1",
    "preact": "^10.10.6",
    "react-feather": "^2.0.10",
    "react-image-lightbox": "^5.1.4"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@nonsensebb/eslint-config-preact": "^0.7.0",
    "@nonsensebb/stylelint-config-scss": "^0.7.0",
    "babel-jest": "^28.1.3",
    "dotenv-flow": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.22.0",
    "eslint-import-resolver-jsconfig": "^1.1.0",
    "eslint-plugin-astro": "^0.17.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.54.5",
    "stylelint": "^14.11.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0"
  }
}
